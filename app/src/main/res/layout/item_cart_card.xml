<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_cart_card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    android:padding="5dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/linearLayoutCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_productOnCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            app:srcCompat="@drawable/ic_action_username" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_productNameCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Ürünİsmi"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="169dp"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/textView_productAmountCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miktar"
                android:textAlignment="center"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_odd"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@drawable/rounded_button_oddfromcart"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_onCountCart"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:background="#F8E7EF"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_add"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@drawable/rounded_button_addtocart"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/textView_priceOfProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Fiyat"
            android:textAlignment="center"
            android:textColor="@color/colorBackground"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.cardview.widget.CardView>